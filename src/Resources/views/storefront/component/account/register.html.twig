{% sw_extends '@Storefront/storefront/component/account/register.html.twig' %}

{% block component_account_register_personal_password_input %}
    {{ parent() }}

    {% if shopware.theme['dmf-account-showpassword-enable'] %}
        {% if shopware.theme['dmf-account-showpassword-variant'] == "icon" %}
            <span class="toggle-password" data-toggle-password="personalPassword">
                <span class="eye-open">{% sw_icon 'eye-open' %}</span>
                <span class="eye-close">{% sw_icon 'eye-crossed' %}</span>
            </span>
        {% else %}
            <span class="toggle-password" data-toggle-password="personalPassword">
                <span class="eye-open textlink">{{ "account.showpasswordText"|trans|striptags }}</span>
                <span class="eye-close textlink">{{ "account.showpasswordTextHide"|trans|striptags }}</span>
            </span>
        {% endif %}
    {% endif %}
{% endblock %}

